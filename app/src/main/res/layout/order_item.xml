<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"

    android:layout_marginTop="5dp"
    android:background="@drawable/carditem">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/temp"
            android:id="@+id/circleImageView" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_alignTop="@+id/circleImageView"
            android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/redactirovat"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Information\norder"
                android:textColor="#cacaca"
                android:textSize="10dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="3dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:layout_alignTop="@+id/circleImageView"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/redactirovat"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Sum \norder"
                android:textColor="#cacaca"
                android:textSize="10dp"
                android:layout_marginTop="3dp"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

        <FrameLayout
            android:layout_width="2px"
            android:layout_height="50dp"
            android:background="#f1f1f1"
            android:layout_alignBottom="@+id/circleImageView"
            android:layout_alignTop="@+id/circleImageView"
            android:layout_marginLeft="115dp"
            />
        <FrameLayout
            android:layout_width="2px"
            android:layout_height="50dp"
            android:background="#f1f1f1"
            android:layout_alignBottom="@+id/circleImageView"
            android:layout_alignTop="@+id/circleImageView"
            android:layout_marginRight="115dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

</LinearLayout>